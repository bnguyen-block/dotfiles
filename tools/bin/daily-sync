#!/usr/bin/env sh

echo "#######################################"
echo "## $(date) ##"
echo "#######################################"

echo "####################"
echo "## Syncing binary ..."
echo "####################"
export PATH="/opt/homebrew/bin:${PATH}"
/opt/homebrew/bin/sqm update
/Users/bnguyen/bin/hermit sync

echo "####################"
echo "## Update nix-channel ..."
echo "####################"
/run/current-system/sw/bin/nix-channel --update

echo "Done"
